<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>YapServer</display-name>        
  
  <servlet>
    <servlet-name>RootServlet</servlet-name>
    <servlet-class>yap.servlet.RootServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>RootServlet</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>yap.servlet.LoginServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>LogoutServlet</servlet-name>
    <servlet-class>yap.servlet.LogoutServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>LogoutServlet</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>SignupServlet</servlet-name>
    <servlet-class>yap.servlet.SignupServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>SignupServlet</servlet-name>
    <url-pattern>/signup</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>BusinessServlet</servlet-name>
    <servlet-class>yap.servlet.BusinessServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>BusinessServlet</servlet-name>
    <url-pattern>/business</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>ReviewServlet</servlet-name>
    <servlet-class>yap.servlet.ReviewServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>ReviewServlet</servlet-name>
    <url-pattern>/reviews</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>AddReviewServlet</servlet-name>
    <servlet-class>yap.servlet.AddReviewServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>AddReviewServlet</servlet-name>
    <url-pattern>/addreview</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>AddBusinessServlet</servlet-name>
    <servlet-class>yap.servlet.AddBusinessServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>AddBusinessServlet</servlet-name>
    <url-pattern>/addbusiness</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>DefaultServlet</servlet-name>
    <servlet-class>org.eclipse.jetty.servlet.DefaultServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>DefaultServlet</servlet-name>
  	<url-pattern>/Resources/*</url-pattern>
  </servlet-mapping>
  
</web-app>